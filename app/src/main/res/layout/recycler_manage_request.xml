<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/margin_top"
    app:cardBackgroundColor="@color/transparent"
    app:cardElevation="0dp"
    app:cardCornerRadius="0dp">
    <LinearLayout
        android:id="@+id/layout_one"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="start">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/textViewName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/username_cap"
                android:textColor="@color/white_"
                android:textStyle="normal"
                android:textSize="11sp"
                android:padding="2dp"
                android:maxLines="1"
                android:layout_gravity="start"
                android:fontFamily="@font/ibmplexsanshebrew_regular"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/textViewCategory"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/textViewCategory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/category_text"
                android:textColor="@color/white_"
                android:textStyle="normal"
                android:textSize="11sp"
                android:padding="2dp"
                android:maxLines="1"
                android:layout_gravity="start"
                android:fontFamily="@font/ibmplexsanshebrew_regular"
                app:layout_constraintStart_toEndOf="@+id/textViewName"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/textViewTime"/>
            <TextView
                android:id="@+id/textViewTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/morning"
                android:textColor="@color/white_"
                android:textStyle="normal"
                android:textSize="11sp"
                android:padding="2dp"
                android:maxLines="1"
                android:layout_gravity="start"
                android:fontFamily="@font/ibmplexsanshebrew_regular"
                app:layout_constraintStart_toEndOf="@+id/textViewCategory"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/textViewStatus"/>
            <TextView
                android:id="@+id/textViewStatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/presented"
                android:textColor="@color/red_400"
                android:textStyle="normal"
                android:textSize="11sp"
                android:padding="2dp"
                android:maxLines="1"
                android:layout_gravity="start"
                android:fontFamily="@font/ibmplexsanshebrew_bold"
                app:layout_constraintStart_toEndOf="@+id/textViewTime"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp">
            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewApprove"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_top"
                android:layout_marginEnd="@dimen/margin_top"
                app:cardBackgroundColor="@color/transparent"
                app:cardElevation="0dp"
                app:cardCornerRadius="3dp"
                app:layout_constraintHorizontal_weight="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/cardViewChangeStatus"
                app:layout_constraintTop_toTopOf="parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/approve"
                    android:textColor="@color/white_"
                    android:textStyle="normal"
                    android:textSize="11sp"
                    android:maxLines="1"
                    android:paddingEnd="8dp"
                    android:paddingStart="8dp"
                    android:paddingTop="1dp"
                    android:gravity="center"
                    android:paddingBottom="1dp"
                    android:background="@drawable/green_border_rect"
                    android:layout_gravity="start"
                    android:fontFamily="@font/ibmplexsanshebrew_bold"
                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewChangeStatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_top"
                android:layout_marginEnd="@dimen/margin_top"
                app:cardBackgroundColor="@color/transparent"
                app:cardElevation="0dp"
                app:cardCornerRadius="3dp"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/cardViewApprove"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/cardViewAssignTime">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/change_status"
                    android:textColor="@color/white_"
                    android:textStyle="normal"
                    android:textSize="11sp"
                    android:maxLines="1"
                    android:paddingEnd="8dp"
                    android:paddingStart="8dp"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp"
                    android:gravity="center"
                    android:background="@drawable/green_border_rect"
                    android:layout_gravity="start"
                    android:fontFamily="@font/ibmplexsanshebrew_bold" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewAssignTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_top"
                android:layout_marginEnd="@dimen/margin_top"
                app:cardBackgroundColor="@color/transparent"
                app:cardElevation="0dp"
                app:cardCornerRadius="3dp"
                app:layout_constraintHorizontal_weight="0.7"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/cardViewChangeStatus"
                app:layout_constraintEnd_toStartOf="@+id/cardViewReject">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/morning"
                    android:textColor="@color/white_"
                    android:textStyle="normal"
                    android:textSize="11sp"
                    android:maxLines="1"android:paddingEnd="8dp"
                    android:paddingStart="8dp"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp"
                    android:gravity="center"
                    android:background="@drawable/green_border_rect"
                    android:layout_gravity="center"
                    android:fontFamily="@font/ibmplexsanshebrew_bold"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewReject"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_top"
                android:layout_marginEnd="@dimen/margin_top"
                app:cardBackgroundColor="@color/transparent"
                app:cardElevation="0dp"
                app:cardCornerRadius="3dp"
                app:layout_constraintHorizontal_weight="0.5"
                app:layout_constraintStart_toEndOf="@+id/cardViewAssignTime"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/reject"
                    android:textColor="@color/white_"
                    android:textStyle="normal"
                    android:textSize="11sp"
                    android:paddingEnd="8dp"
                    android:paddingStart="8dp"
                    android:paddingTop="1dp"
                    android:gravity="center"
                    android:paddingBottom="1dp"
                    android:maxLines="1"
                    android:background="@drawable/red_border_rect"
                    android:layout_gravity="center"
                    android:fontFamily="@font/ibmplexsanshebrew_bold"/>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@color/grey_200" />
    </LinearLayout>

</androidx.cardview.widget.CardView>