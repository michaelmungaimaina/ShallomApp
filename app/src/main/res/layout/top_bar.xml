<?xml version="1.0" encoding="utf-8"?>
<com.google.android.flexbox.FlexboxLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:flexWrap="wrap"
    app:alignItems="flex_start"
    app:alignContent="flex_start"
    app:justifyContent="space_between"
    android:background="@color/black">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/margin_top"
        android:layout_marginBottom="@dimen/margin_top"
        android:gravity="start">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/shapeableImageViewUserAvatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:src="@drawable/user_avatar"
            app:strokeColor="@android:color/darker_gray"
            android:adjustViewBounds="true"
            android:elevation="5dp"
            android:maxWidth="60dp"
            android:maxHeight="60dp"
            android:scaleType="fitXY"
            android:layout_marginStart="@dimen/margin_top"
            android:background="@color/green_700"
            app:shapeAppearance="?attr/actionButtonStyle"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/margin_top"
        android:gravity="start">
        <TextView
            android:id="@+id/textViewGreetingText"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:text="@string/greeting_text"
            android:textColor="@color/green_bright"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/margin_top"
            android:textSize="15sp"
            android:maxLines="1"
            android:layout_gravity="start"
            android:fontFamily="@font/ibmplexsanshebrew_bold"/>
        <TextView
            android:id="@+id/textViewUserName"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="@string/username_cap"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20sp"
            android:maxLines="1"
            android:layout_gravity="start"
            android:layout_marginTop="@dimen/margin_top"
            android:fontFamily="@font/ibmplexsanshebrew_bold"/>
    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="@dimen/margin_top"
        android:layout_marginTop="@dimen/margin_top"
        android:layout_marginBottom="@dimen/margin_top"
        android:gravity="center">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="27dp"
            app:cardBackgroundColor="@color/grey_300">
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/shapeableImageViewSearch"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:src="@drawable/green_search_icon"
                app:strokeColor="@android:color/darker_gray"
                android:adjustViewBounds="true"
                android:elevation="0dp"
                android:maxWidth="60dp"
                android:maxHeight="60dp"
                android:scaleType="fitCenter"
                android:background="@color/grey_300"
                android:layout_margin="9dp"
                app:shapeAppearance="?attr/actionButtonStyle"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="27dp"
            app:cardBackgroundColor="@color/grey_300"
            android:layout_marginStart="@dimen/margin_top">
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/shapeableImageViewNotification"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:src="@drawable/notification_icon"
                app:strokeColor="@android:color/darker_gray"
                android:adjustViewBounds="true"
                android:elevation="0dp"
                android:maxWidth="60dp"
                android:maxHeight="60dp"
                android:scaleType="fitXY"
                android:background="@color/green_700"
                android:layout_margin="9dp"
                app:shapeAppearance="?attr/actionButtonStyle"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="27dp"
            app:cardBackgroundColor="@color/grey_300"
            android:layout_marginStart="@dimen/margin_top"
            android:layout_marginEnd="@dimen/margin_top">
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/shapeableImageViewSettings"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:src="@drawable/setting_icon"
                app:strokeColor="@android:color/darker_gray"
                android:layout_centerHorizontal="true"
                android:adjustViewBounds="true"
                android:elevation="5dp"
                android:maxWidth="60dp"
                android:maxHeight="60dp"
                android:scaleType="fitXY"
                android:layout_margin="9dp"
                android:background="@color/green_700"
                app:shapeAppearance="?attr/actionButtonStyle"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</com.google.android.flexbox.FlexboxLayout>