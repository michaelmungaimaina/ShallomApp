<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_gradient"
    android:backgroundTintMode="src_atop"
    android:backgroundTint="@color/layout_tint"
    android:orientation="vertical"
    android:layout_gravity="center">
    
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/shapeableImageViewUserAvatar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/white"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:src="@drawable/ic_user_avatar_blue"
        app:strokeWidth="1dp"
        app:strokeColor="@android:color/darker_gray"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:elevation="5dp"
        android:maxWidth="50dp"
        android:maxHeight="50dp"
        android:scaleType="fitXY"
        app:shapeAppearance="?attr/actionButtonStyle"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/log_in"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20sp"
        android:fontFamily="@font/inter_regular"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/username"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="15sp"
        android:fontFamily="@font/ibmplexsanshebrew_medium"
        android:layout_gravity="start"
        android:layout_marginTop="15dp"
        android:layout_marginStart="@dimen/margin_start"/>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayoutUsername"
        android:layout_width="310dp"
        android:layout_height="48dp"
        android:textColorHint="@color/grey_350"
        android:hint="@string/username_hint"
        android:layout_marginStart="@dimen/margin_start"
        android:layout_marginTop="@dimen/margin_top"
        style="@style/OutlinedRoundedBox">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/textInputEditTextUsername"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textStyle="italic"
        android:inputType="text"
        android:fontFamily="@font/ibmplexsanshebrew_regular"
        android:textSize="14sp"
        android:background="@drawable/round_corner_toggle_less"/>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/password"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="15sp"
        android:fontFamily="@font/ibmplexsanshebrew_medium"
        android:layout_gravity="start"
        android:layout_marginTop="15dp"
        android:layout_marginStart="@dimen/margin_start"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayoutPassword"
        android:layout_width="310dp"
        android:layout_height="48dp"
        android:textColorHint="@color/grey_350"
        android:hint="@string/password_hint"
        android:layout_marginStart="@dimen/margin_start"
        app:passwordToggleEnabled="true"
        app:counterEnabled="true"
        app:counterMaxLength="16"
        app:passwordToggleTint="@color/green_light"
        android:layout_marginTop="@dimen/margin_top"
        style="@style/OutlinedRoundedBox">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/textInputEditTextPassword"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textStyle="italic"
        android:inputType="textPassword"
        android:fontFamily="@font/ibmplexsanshebrew_regular"
        android:textSize="14sp"
        android:background="@drawable/round_corner_toggle"/>
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginStart="220dp">
        <TextView
            android:id="@+id/textViewForgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/forgot_password"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="15sp"
            android:fontFamily="@font/ibmplexsanshebrew_medium"
            android:layout_gravity="start"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:src="@drawable/ic_forgot_password"
            android:layout_marginStart="5dp"/>

    </LinearLayout>
    
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonLogIn"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:background="@drawable/buton_background"
        android:layout_gravity="center"
        android:text="@string/log_in"
        android:textColor="@color/white"
        android:layout_marginTop="48dp"
        android:textSize="14sp"
        android:fontFamily="@font/ibmplexsanshebrew_medium"
        android:textStyle="bold"/>
    
    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewGoogleSignIn"
        android:layout_width="@dimen/input_width"
        android:layout_height="48dp"
        android:foreground="@drawable/cardview_border"
        app:cardBackgroundColor="@drawable/cardview_border"
        android:layout_marginStart="@dimen/margin_start"
        android:layout_marginTop="30dp"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_google"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/sign_in_with_google"
                android:textSize="14sp"
                android:fontFamily="@font/ibmplexsanshebrew_medium"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_marginStart="10dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="@dimen/input_width"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginStart="@dimen/margin_start"
        android:layout_marginTop="@dimen/margin_top">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/dont_have_account"
            android:textSize="14sp"
            android:fontFamily="@font/ibmplexsanshebrew_thin"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginStart="10dp"/>
        <TextView
            android:id="@+id/textViewCreateAccount"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/create_account"
            android:textSize="14sp"
            android:fontFamily="@font/ibmplexsanshebrew_bold"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textColor="@color/green_bright"
            android:gravity="center"
            android:layout_marginStart="10dp"/>
    </LinearLayout>


</androidx.appcompat.widget.LinearLayoutCompat>