<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/background_gradient"
    android:backgroundTintMode="src_atop"
    android:backgroundTint="@color/layout_tint"
    android:gravity="center">
    <TextView
        android:layout_margin="@dimen/margin_top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/user_panel"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="19sp"
        android:maxLines="1"
        android:layout_gravity="center"
        android:gravity="center"
        android:fontFamily="@font/ibmplexsanshebrew_bold"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top">
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="430dp"
            android:layout_centerHorizontal="true"
            android:elevation="0dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:foreground="@drawable/green_cardview_border"
            app:cardCornerRadius="5dp"
            app:cardBackgroundColor="@color/colorless"
            android:alpha="0.7"/>
        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/flexboxLayoutTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:flexWrap="wrap"
            android:layout_alignTop="@+id/cardView"
            app:alignItems="flex_start"
            app:alignContent="flex_start"
            app:justifyContent="space_between"
            android:layout_centerHorizontal="true">
            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewNewRequest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:elevation="0dp"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:foreground="@drawable/grey_cardview_border"
                app:cardCornerRadius="5dp"
                app:cardBackgroundColor="@color/colorless">
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:elevation="0dp"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:foreground="@drawable/grey_cardview_border"
                    app:cardCornerRadius="15dip"
                    app:cardBackgroundColor="@color/grey_500">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">
                    <ImageView
                        android:id="@+id/imageViewNewRequest"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/new_request_icon"
                        android:adjustViewBounds="true"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginStart="20dp"
                        android:scaleType="centerCrop"/>
                    <TextView
                        android:layout_margin="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:text="@string/new_request"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="19sp"
                        android:maxLines="1"
                        android:layout_gravity="center"
                        android:gravity="start"
                        android:fontFamily="@font/ibmplexsanshebrew_bold"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewMyRequests"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:elevation="0dp"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:foreground="@drawable/grey_cardview_border"
                app:cardCornerRadius="5dp"
                app:cardBackgroundColor="@color/colorless">
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:elevation="0dp"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:foreground="@drawable/grey_cardview_border"
                    app:cardCornerRadius="15dip"
                    app:cardBackgroundColor="@color/green_700">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">
                        <ImageView
                            android:id="@+id/imageViewMyRequests"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/view_request_icon"
                            android:adjustViewBounds="true"
                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="20dp"
                            android:layout_marginStart="20dp"
                            android:scaleType="centerCrop"/>
                        <TextView
                            android:layout_margin="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:text="@string/my_request"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:textSize="19sp"
                            android:maxLines="1"
                            android:layout_gravity="center"
                            android:gravity="start"
                            android:fontFamily="@font/ibmplexsanshebrew_bold"/>
                        </LinearLayout>
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>
        </com.google.android.flexbox.FlexboxLayout>
        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewDashboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="0dp"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:foreground="@drawable/grey_cardview_border"
            app:cardCornerRadius="5dp"
            app:cardBackgroundColor="@color/colorless"
            android:layout_below="@id/flexboxLayoutTop"
            android:layout_centerHorizontal="true">
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:elevation="0dp"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:foreground="@drawable/grey_cardview_border"
                app:cardCornerRadius="15dip"
                app:cardBackgroundColor="@color/black_main">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/imageViewDashboard"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/new_request_icon"
                        android:adjustViewBounds="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginStart="20dp"
                        android:scaleType="centerCrop"/>
                    <TextView
                        android:layout_margin="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:text="@string/new_request"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="19sp"
                        android:maxLines="1"
                        android:layout_gravity="center"
                        android:gravity="start"
                        android:fontFamily="@font/ibmplexsanshebrew_bold"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>
</LinearLayout>