<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:backgroundTintMode="src_atop"
    android:background="@drawable/background_gradient"
    android:backgroundTint="@color/layout_tint">

    <include
        android:id="@+id/my_toolbar"
        layout="@layout/toolbar_song_view"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:minHeight="?attr/actionBarSize"
        android:fitsSystemWindows="true"/>
    <LinearLayout
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/margin_top"
        android:layout_marginStart="@dimen/margin_view_start">
        <TextView
            android:id="@+id/verticalLine2"
            android:layout_width="5dp"
            android:layout_height="20dp"
            android:background="@color/green_bright"
            android:layout_marginTop="5dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginEnd="@dimen/margin_top"
            android:layout_marginStart="2dp">
            <TextView
                android:id="@+id/textViewChorusText"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_gravity="start"
                android:layout_marginTop="@dimen/margin_top"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/ibmplexsanshebrew_bold"
                android:maxLines="1"
                android:text="@string/chorus"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/textViewChorus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sample_text"
        android:textColor="@color/white"
        android:textStyle="normal"
        android:textSize="12sp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_top"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:justificationMode="inter_word"
        android:fontFamily="@font/ibmplexsanshebrew_regular"/>
    <LinearLayout
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/margin_view_start"
        android:layout_marginStart="@dimen/margin_view_start">
        <TextView
            android:layout_width="5dp"
            android:layout_height="20dp"
            android:background="@color/green_bright"
            android:layout_marginTop="5dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginEnd="@dimen/margin_top"
            android:layout_marginStart="2dp">
            <TextView
                android:id="@+id/textViewStanzaText"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_gravity="start"
                android:layout_marginTop="@dimen/margin_top"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/ibmplexsanshebrew_bold"
                android:maxLines="1"
                android:text="@string/chorus"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/textViewStanzas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sample_text"
        android:textColor="@color/white"
        android:textStyle="normal"
        android:textSize="12sp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_top"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:justificationMode="inter_word"
        android:visibility="visible"
        android:fontFamily="@font/ibmplexsanshebrew_regular"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewStanzas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:visibility="gone"
        android:layout_marginTop="@dimen/margin_view_start"/>

</androidx.appcompat.widget.LinearLayoutCompat>