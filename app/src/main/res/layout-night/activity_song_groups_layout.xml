<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:backgroundTintMode="src_atop"
    android:background="@drawable/background_gradient"
    android:backgroundTint="@color/layout_tint">

    <include
        android:id="@+id/my_toolbar"
        layout="@layout/toolbar_song_home"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:minHeight="?attr/actionBarSize"
        android:fitsSystemWindows="true"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_top"
                android:layout_marginEnd="@dimen/margin_top"
                android:foreground="@drawable/green_round_corner_rectangle"
                android:foregroundTint="@color/green_teal"
                android:foregroundTintMode="src_atop"
                app:cardCornerRadius="15dp"
                app:cardBackgroundColor="@color/transparent"
                android:layout_gravity="center">
                <ImageView
                    android:id="@+id/imageViewWorship"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@color/grey_300"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_search_green"
                    app:strokeWidth="0dp"
                    app:strokeColor="@android:color/darker_gray"
                    android:adjustViewBounds="true"
                    android:elevation="5dp"
                    android:maxWidth="50dp"
                    android:maxHeight="50dp"
                    android:scaleType="fitXY"
                    android:foreground="#BE070707"
                    android:foregroundTint="@color/black_main"
                    android:foregroundTintMode="src_atop"
                    app:shapeAppearance="?attr/actionButtonStyle"
                    app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"
                    android:contentDescription="@string/todo" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/ibmplexsanshebrew_bold"
            android:maxLines="1"
            android:text="@string/worship"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:letterSpacing="0.5"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
